<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Neutron\Widget\PageBlockBundle\Entity\PageBlock">   

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">name</option>
            <option name="message">name.already_used</option>
            <option name="groups">
                <value>create</value>
            </option>
        </constraint>
        
        <property name="name">
        	<constraint name="NotBlank">
                <option name="message">name.blank</option>
                <option name="groups">
                    <value>create</value>
                </option>
            </constraint>
            
            <constraint name="MaxLength">
                <option name="limit">50</option>
                <option name="message">name.long</option>
                <option name="groups">
                    <value>create</value>
                </option>
            </constraint>
            
            <constraint name="Regex">
                <option name="pattern">/^[A-Z_]*$/</option>
                <option name="match">true</option>
                <option name="message">uniqueName.alpha</option>
                <option name="groups">create</option>
            </constraint>
        </property>
	     
        <property name="label">
        	<constraint name="NotBlank">
                <option name="message">label.blank</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">label.short</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">35</option>
                <option name="message">label.long</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
        </property>
	     
        <property name="title">
        	<constraint name="NotBlank">
                <option name="message">title.blank</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">title.short</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">title.long</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
        </property>
        
        <property name="type">
        	<constraint name="NotBlank">
                <option name="message">type.blank</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
        </property>
        
    </class>

</constraint-mapping>
